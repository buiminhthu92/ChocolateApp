<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/userImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitEnd"
            android:src="@drawable/selfies_girl_2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="Trâm Anh"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="23/08/2015"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Quán ăn ngon nhưng hơi đắt, chỗ ngồi rộng nhưng không có điều hòa"/>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_weight="1"
            android:src="@drawable/food_image1"/>

        <ImageView
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_weight="1"
            android:src="@drawable/food_image2"/>

        <ImageView
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_weight="1"
            android:src="@drawable/food_image3"/>

    </LinearLayout>

</LinearLayout>
