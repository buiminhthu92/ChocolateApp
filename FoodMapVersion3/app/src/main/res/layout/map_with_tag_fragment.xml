<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/fragment_serach_tag"
        android:name="com.gabbyberas.foodmapversion3.SpinnerFragment"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <fragment
            android:id="@+id/mapFragment"
            android:name="com.gabbyberas.foodmapversion3.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@drawable/alpha_bg"
            android:orientation="horizontal">
            
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:src="@drawable/chi_duong_icon"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:src="@drawable/goi_dien_icon_white"/>
            
        </LinearLayout>
        
    </FrameLayout>
    
</LinearLayout>
